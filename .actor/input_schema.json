{
    "title": "Instagram Followers Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "username": {
            "title": "Target Username",
            "type": "string",
            "description": "Instagram username to scrape followers from (without @)",
            "editor": "textfield",
            "example": "aura.place_es"
        },
        "session_id": {
            "title": "Session ID",
            "type": "string",
            "description": "The 'sessionid' cookie from Instagram browser session",
            "editor": "textfield",
            "isSecret": true
        },
        "csrf_token": {
            "title": "CSRF Token",
            "type": "string",
            "description": "The 'csrftoken' cookie from Instagram browser session",
            "editor": "textfield",
            "isSecret": true
        },
        "ds_user_id": {
            "title": "DS User ID",
            "type": "string",
            "description": "The 'ds_user_id' cookie (optional)",
            "editor": "textfield"
        },
        "max_followers": {
            "title": "Max Followers",
            "type": "integer",
            "description": "Max followers to scrape (empty = all)",
            "editor": "number"
        }
    },
    "required": ["username", "session_id", "csrf_token"]
}
