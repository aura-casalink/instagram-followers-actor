{
    "title": "Instagram Followers Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "user_id": {
            "title": "Target User ID",
            "type": "string",
            "description": "Instagram user ID to scrape followers from",
            "editor": "textfield"
        },
        "session_id": {
            "title": "Session ID",
            "type": "string",
            "description": "The 'sessionid' cookie from Instagram browser session",
            "editor": "textfield",
            "isSecret": true
        },
        "csrf_token": {
            "title": "CSRF Token",
            "type": "string",
            "description": "The 'csrftoken' cookie from Instagram browser session",
            "editor": "textfield",
            "isSecret": true
        },
        "ds_user_id": {
            "title": "DS User ID",
            "type": "string",
            "description": "The 'ds_user_id' cookie (optional)",
            "editor": "textfield"
        },
        "ig_did": {
            "title": "IG Device ID",
            "type": "string",
            "description": "The 'ig_did' cookie (optional)",
            "editor": "textfield"
        },
        "mid": {
            "title": "MID Cookie",
            "type": "string",
            "description": "The 'mid' cookie (optional)",
            "editor": "textfield"
        },
        "www_claim": {
            "title": "WWW Claim",
            "type": "string",
            "description": "X-IG-WWW-Claim header (optional)",
            "editor": "textfield",
            "default": "0"
        },
        "max_followers": {
            "title": "Max Followers",
            "type": "integer",
            "description": "Max followers to scrape (empty = all)",
            "editor": "number"
        },
        "delay": {
            "title": "Delay (seconds)",
            "type": "number",
            "description": "Delay between requests",
            "default": 3.0
        }
    },
    "required": ["user_id", "session_id", "csrf_token"]
}
