{
    "title": "Instagram Mobile API Scraper",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "user_id": {
            "title": "Target User ID",
            "type": "string",
            "description": "Instagram user ID (numeric)",
            "editor": "textfield"
        },
        "authorization": {
            "title": "Authorization Token",
            "type": "string",
            "description": "Bearer token (IGT:2:...)",
            "editor": "textfield",
            "isSecret": true
        },
        "device_id": {
            "title": "Device ID",
            "type": "string",
            "description": "Android device ID",
            "default": "android-acd484febac47e6b",
            "editor": "textfield"
        },
        "max_followers": {
            "title": "Max Followers",
            "type": "integer",
            "description": "Limit (empty = all)",
            "editor": "number"
        },
        "delay": {
            "title": "Delay (seconds)",
            "type": "number",
            "default": 2.0,
            "editor": "number"
        }
    },
    "required": ["user_id", "authorization"]
}
